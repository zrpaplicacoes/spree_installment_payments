<%- if payment_method.can_installment?(@order) %>
  <p class="field" data-hook="installments">
      <%= label_tag "installments_on_card_#{payment_method.id}" do %>
        <%= Spree.t(:installments) %>
      <% end %>
      <%= select_tag "order[payments_attributes][][installments]", options_for_select(payment_method.format_options_for_select(@order)), id: "installments_on_card_#{payment_method.id}", class: "form-control select2" %>
  </p>
<% end %>

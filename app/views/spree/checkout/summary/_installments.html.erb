<% if order.payment.installments > 1 %>
  <tr class="warning total total-with-interest">
    <td colspan="4" align="right">
      <b><%= I18n.t('spree.installment_adjustment_label', installment: order.payment.installments)%></b>
    </td>
    <td class="month-total">
      <span class="lead text-primary"><%= order.display_total_per_installment %></span>
    </td>
  </tr>
<% end %>

<% if order.payment.interest > 0 %>
  <tr class="warning total total-with-interest">
    <td colspan="4" align="right">
      <b><%= I18n.t('spree.interest_adjustment_label', interest: ( order.payment.interest * 100 )) %></b>
    </td>
    <td class="total">
      <span class="lead text-primary"><%= order.display_total_with_interest %></span>
    </td>
  </tr>
<% end %>
